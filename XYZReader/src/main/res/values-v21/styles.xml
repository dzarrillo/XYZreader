<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/ic_share</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Theme.Bacon.Detail.HeaderTitle" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/detail_metabar_title_bottom_padding</item>
        <item name="android:fontFamily">Roboto-Condensed</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_header_line_spacing_multiplier</item>
    </style>

    <style name="Theme.Bacon.Detail.SubHeaderTitle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/detail_subhead_text_size</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="Theme.Bacon.Detail.Body" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/detail_body_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/keyline_margin</item>
        <item name="android:layout_marginRight">@dimen/keyline_margin</item>
        <item name="android:paddingBottom">@dimen/detail_body_bottom_margin</item>
        <item name="android:textColorLink">@color/color_accent</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
    </style>
</resources>